<%- include("../partials/header") %>

<div class="container" style="margin-top: 10px">
    <div class="row">
        <h1 class="col-12 text-center">Edit <%= vtuber.name %></h1>
        <div style="width: 50%; margin: 20px auto;">
            <form class="col-12" action="/vtuberlist/<%= vtuber._id %>?_method=PUT", method="POST" style="margin-bottom: 20px;">
                <div class="form-group">
                    <input class="form-control text-center" type="text" value="<%= vtuber.name %>" name="vtuberprofile[name]" id="VtuberName">
                </div>
        
                <div class="form-group">
                    <input class="form-control text-center" type="text" value="<%= vtuber.image %>" name="vtuberprofile[image]" id="VtuberImage">
                </div>

                <div class="form-group">
                    <input class="form-control text-center" type="text" value="<%= vtuber.description %>" name="vtuberprofile[description]" id="VtuberImage">
                </div>
        
                <button class="btn btn-danger btn-block"> Submit </button>
            </form>
            <a href="/vtuberlist" class="col-12">Go Back</a>
        </div>
    </div>
</div>



<%- include("../partials/footer") %>