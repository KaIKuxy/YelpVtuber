<%- include("../partials/header") %>
<!-- https://yt3.ggpht.com/5RwV72IxdjTFfA6L1Cdb8doip2x-GfH7lJaWub-7J2-w_kAy1T8s_d-wBtn7nMhzJGMWMgv7_w=w2560-fcrop64=1,00005a57ffffa5a8-k-c0xffffffff-no-nd-rj -->
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Yelp Vtuber</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="https://yt3.ggpht.com/5RwV72IxdjTFfA6L1Cdb8doip2x-GfH7lJaWub-7J2-w_kAy1T8s_d-wBtn7nMhzJGMWMgv7_w=w2560-fcrop64=1,00005a57ffffa5a8-k-c0xffffffff-no-nd-rj" alt="">
                <div class="caption-full">
                    <h4 class="float-right">25.1 subscribers now</h4>
                    <h4> <a href="/"><%= vtuber.name %></a> </h4>
                    <p><%= vtuber.description %></p>
                    <p>
                        <em>Submitted By <%= vtuber.creator.username %></em>
                    </p>
                    <% if (currentUser && vtuber.creator.id.equals(currentUser._id)) { %>
                        <a class="btn btn-warning" href="/vtuberlist/<%= vtuber._id %>/edit">Edit</a>
                        <form class="delete-form" action="/vtuberlist/<%= vtuber._id %>?_method=delete" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    <% } %>
                </div>
            </div>
            <div class="card bg-light">
                <div class="card-body">
                    <div class="text-right">
                        <a class="btn btn-success" href="/vtuberlist/<%= vtuber._id %>/comments/new">Add New Comment</a>
                    </div>
                    <hr>
                    <% vtuber.comments.forEach((comment) => { %>
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="float-right">10 days ago</span>
                            <p>
                                <%= comment.text %>
                            </p>
                            <% if (currentUser && comment.author.id.equals(currentUser._id)) { %>
                            <a class="btn btn-xs btn-warning"
                            href="/vtuberlist/<%= vtuber._id %>/comments/<%= comment._id %>/edit">Edit</a>
                            <form class="delete-form" action="/vtuberlist/<%= vtuber._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                                <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                            </form>
                            <% } %>
                        </div>
                    <% }); %>
                </div>
            </div>
            
        </div>
    </div>
</div>





<%- include("../partials/footer") %>